@page "/"
@using System.Timers
@using MemoryGame.Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

@rendermode @(new InteractiveServerRenderMode(false))

@inject ProtectedLocalStorage ProtectedLocalStore

<PageTitle>Home</PageTitle>

<h1 class="display-4 text-center mb-4 display-space">Memory Game</h1>
<div class="text-center mb-5">
    <div class="mb-3">
        <span class="space-label display-space">Mission Difficulty</span>
        <div class="difficulty-selector">
            <button class="btn btn-difficulty @(_selectedDifficulty == Difficulty.Easy ? "active" : "")"
                    @onclick="() => SetDifficulty(Difficulty.Easy)">Cadet
            </button>
            <button class="btn btn-difficulty @(_selectedDifficulty == Difficulty.Medium ? "active" : "")"
                    @onclick="() => SetDifficulty(Difficulty.Medium)">Commander
            </button>
            <button class="btn btn-difficulty @(_selectedDifficulty == Difficulty.Hard ? "active" : "")"
                    @onclick="() => SetDifficulty(Difficulty.Hard)">Legend
            </button>
        </div>
    </div>
    <div class="game-stats">
        <button class="btn btn-space btn-space-start me-2" @onclick="StartGame">Launch</button>
        <button class="btn btn-space btn-space-stop me-3" @onclick="StopGame">Abort</button>
        <span class="display-6 display-space align-middle">
            Time: @_elapsedGameTime.ToString(@"mm\:ss")
        </span>
    </div>
</div>

<div class="container-lg card-container">
    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-4 justify-content-center">
        @foreach (var card in _playField)
        {
            <div class="col">
                <div class="memory-card @(card.IsMatched ? "matched" : "")" @onclick="() => HandleCardClick(card)">
                    <img class="planet-img" src="@(card.Image)"
                         alt="Planet Card"/>
                </div>
            </div>
        }
    </div>
</div>

@code
{
    readonly List<Card> _playField = [];
    readonly List<Card> _selectedCards = [];

    const int CardTimerDuration = 2_000;
    readonly Timer _cardTimer = new(CardTimerDuration);
    readonly Timer _gameTimer = new();

    bool _gameRunning;
    TimeSpan _elapsedGameTime;

    enum Difficulty
    {
        Easy,
        Medium,
        Hard
    }

    Difficulty _selectedDifficulty = Difficulty.Medium;

    private void SetDifficulty(Difficulty difficulty)
    {
        if (_gameRunning) return;

        _selectedDifficulty = difficulty;
        InitialisePlayField();
    }

    protected override void OnInitialized()
    {
        InitGame();

        _cardTimer.Elapsed += CardTimerOnElapsed;
        _cardTimer.AutoReset = false;

        _gameTimer.Elapsed += GameTimerOnElapsed;
    }

    private IEnumerable<Card> CreateCards(int amount)
    {
        const int availableImages = 10;
        var cardId = 0;
        var pairsToCreate = amount / 2;

        for (var i = 0; i < pairsToCreate; i++)
        {
            var image = $"planet0{i % availableImages}.png";
            yield return new Card(cardId++, image);
            yield return new Card(cardId++, image);
        }
    }

    private void InitialisePlayField()
    {
        var cardAmount = _selectedDifficulty switch
        {
            Difficulty.Easy => 8,
            Difficulty.Medium => 12,
            Difficulty.Hard => 16,
            _ => throw new ArgumentOutOfRangeException()
        };

        _playField.Clear();

        var cards = CreateCards(cardAmount).Shuffle();
        _playField.AddRange(cards);
    }

    private void ResetTime()
    {
        _elapsedGameTime = TimeSpan.Zero;
    }

    private void InitGame()
    {
        ResetTime();
        InitialisePlayField();
    }

    private void GameTimerOnElapsed(object? sender, ElapsedEventArgs e)
    {
        _elapsedGameTime += TimeSpan.FromMilliseconds(_gameTimer.Interval);
        InvokeAsync(StateHasChanged);
    }

    private void ResetActiveCards()
    {
        foreach (var card in _selectedCards)
        {
            card.IsVisible = false;
        }

        _selectedCards.Clear();
        StateHasChanged();
    }

    private async Task HandleCardClick(Card card)
    {
        if (card.IsMatched || card.IsVisible || !_gameRunning)
            return;

        card.IsVisible = true;

        switch (_selectedCards.Count)
        {
            case 0:
                _selectedCards.Add(card);
                break;
            case 1 when _selectedCards[0].Image.Equals(card.Image) && _selectedCards[0].Id != card.Id:
            {
                _selectedCards[0].IsMatched = true;
                card.IsMatched = true;
                _selectedCards.Clear();

                if (_playField.All(c => c.IsMatched))
                {
                    await GameOver();
                }

                break;
            }
            case 1:
                _selectedCards.Add(card);
                _cardTimer.Start();
                break;
            case 2 when _selectedCards.Any(c => c.Id == card.Id):
                break;
            case 2:
                _cardTimer.Stop();
                ResetActiveCards();
                _selectedCards.Add(card);
                break;
        }
    }

    private async Task GameOver()
    {
        StopGame();
        var storedData = await ProtectedLocalStore.GetAsync<List<Score>>("scores");
        var gameScores = storedData.Value ?? [];
        gameScores.Add(new Score
        {
            Date = DateTime.Now,
            GameTicks = _elapsedGameTime.Ticks
        });

        await ProtectedLocalStore.SetAsync("scores", gameScores);
    }

    private void CardTimerOnElapsed(object? sender, ElapsedEventArgs e)
    {
        // Use InvokeAsync to switch execution back to the dispatcher thread
        InvokeAsync(() =>
        {
            ResetActiveCards();
            StateHasChanged();
        });
    }

    private void StartGame()
    {
        if (_gameRunning)
            return;

        InitGame();

        _gameTimer.Start();
        _gameRunning = true;
    }

    private void StopGame()
    {
        _gameTimer.Stop();
        _gameRunning = false;
    }
}