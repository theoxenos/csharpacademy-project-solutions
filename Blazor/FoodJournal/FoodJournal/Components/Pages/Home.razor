@page "/"

@inject MealService MealService

<PageTitle>Home</PageTitle>

<div class="container-lg">
    <div class="card shadow-sm mt-4 mb-4 border-0" style="background-color: var(--accent-color);">
        <div class="card-body">
            <EditForm Model="_mealSearchViewModel" OnValidSubmit="ValidSubmit" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Meal Type</label>
                    <InputSelect @bind-Value="_mealSearchViewModel.MealType" class="form-select border-0 shadow-sm">
                        <option value="">All Types</option>
                        @foreach (var mealType in Enum.GetValues<MealType>())
                        {
                            <option value="@mealType">@mealType</option>
                        }
                    </InputSelect>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Date</label>
                    <InputDate @bind-Value="_mealSearchViewModel.Date" class="form-control border-0 shadow-sm"/>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Search</label>
                    <InputText @bind-Value="_mealSearchViewModel.SearchTerm" class="form-control border-0 shadow-sm"
                               placeholder="Food or meal name..."/>
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button class="btn btn-light shadow-sm flex-grow-1" type="submit"
                            style="color: var(--primary-color); font-weight: bold;">Search
                    </button>
                    <button class="btn btn-outline-dark border-0" type="button" @onclick="ClearSearch">✕</button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <h4 class="mb-3 fw-bold" style="color: var(--primary-color);">History</h4>
            <div class="list-group shadow-sm border-0 overflow-auto" style="max-height: 70vh;">
                @if (_meals.Count == 0)
                {
                    <div class="list-group-item text-center py-5 text-muted">
                        No meals found. Try searching for something else!
                    </div>
                }
                @foreach (var meal in _meals)
                {
                    <button type="button"
                            class="list-group-item list-group-item-action d-flex align-items-center gap-3 border-0 mb-1 rounded @GetItemClass(meal.Id)"
                            @onclick="() => _selectedMeal = meal">
                        <div class="rounded-circle p-2"
                             style="background-color: white; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                            <img src="images/icons/icons8-@meal.MealType.ToString().ToLower()-48.png"
                                 alt="@meal.MealType" style="width: 32px;"/>
                        </div>
                        <div class="flex-grow-1 text-start">
                            <div class="fw-bold">@meal.Name</div>
                            <small class="text-muted">@meal.Date.ToShortDateString() • @meal.MealType</small>
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </button>
                }
            </div>
        </div>
        <div class="col-md-7">
            @if (_selectedMeal != null)
            {
                <div class="card shadow border-0 h-100" style="border-radius: 15px;">
                    <div class="card-header bg-white border-0 pt-4 px-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span class="badge mb-2"
                                      style="background-color: var(--secondary-color); color: white;">@_selectedMeal.MealType</span>
                                <h2 class="fw-bold">@_selectedMeal.Name</h2>
                                <p class="text-muted"><i
                                        class="bi bi-calendar-event"></i> @_selectedMeal.Date.ToLongDateString()</p>
                            </div>
                            <img src="images/icons/icons8-@_selectedMeal.MealType.ToString().ToLower()-96.png"
                                 style="width: 80px;" alt="@_selectedMeal.MealType"/>
                        </div>
                    </div>
                    <div class="card-body px-4">
                        <h5 class="fw-bold mb-3">Foods in this meal:</h5>
                        <div class="row row-cols-3 row-cols-lg-4 g-3">
                            @foreach (var food in _selectedMeal.Foods)
                            {
                                <div class="col">
                                    <div class="card h-100 border-0 shadow-sm text-center p-2"
                                         style="background-color: #f8f9fa; border-radius: 12px;">
                                        <div class="mb-2">
                                            <img alt="@food.Name" src="images/icons/@food.Icon" style="width: 48px;"/>
                                        </div>
                                        <small class="fw-bold text-truncate d-block">@food.Name</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted opacity-50">
                    <img src="images/icons/icons8-grocery-bag-96.png" style="width: 120px;" alt="Select a meal"/>
                    <p class="mt-3">Select a meal from the list to see details</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item.active {
        background-color: var(--primary-color) !important;
        border-color: var(--primary-color) !important;
        color: white !important;
    }

    .list-group-item.active .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .list-group-item.active .rounded-circle {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>

@code
{
    List<Meal> _meals = [];
    Meal? _selectedMeal;
    MealSearchViewModel _mealSearchViewModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadMeals();
    }

    private async Task LoadMeals()
    {
        _meals = await MealService.GetAllAsync();
        if (_meals.Count > 0)
            _selectedMeal = _meals[0];
    }

    private string GetItemClass(int mealId)
    {
        return _selectedMeal?.Id == mealId ? "active" : "";
    }

    private async Task ValidSubmit()
    {
        _meals = await MealService.GetMealsBasedOnSearchAsync(_mealSearchViewModel);

        _selectedMeal = _meals.Count > 0 ? _meals[0] : null;
    }

    private async Task ClearSearch()
    {
        _mealSearchViewModel = new MealSearchViewModel();
        await LoadMeals();
    }
}
