@using FoodJournal.Features.MealEditor.MealEditForm.Components
<div class="card-body px-4">
    <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator/>

        <CascadingValue Value="Meal">
            <MealMetadataInputControls/>
            <MealTypePicker/>
            <hr class="my-4 opacity-10">
            <div class="row g-4">
                <FoodPicker Foods="Foods" OnFoodSelected="AddFoodToMeal"/>
                <SelectedFoods OnRemoveFoodFromMeal="RemoveFoodFromMeal"/>
            </div>
            <div class="row text-center">
                <ValidationMessage For="() => Meal.Foods" class="text-danger small"/>
            </div>
        </CascadingValue>

        <div class="mt-4 text-end">
            <button class="btn btn-lg px-5 shadow" type="submit"
                    style="background-color: var(--primary-color); color: white; border-radius: 10px; font-weight: bold;">
                Save Meal
            </button>
        </div>
    </EditForm>
</div>

@code
{
    [Parameter] public List<Food> Foods { get; set; } = [];
    [Parameter] public Meal Meal { get; set; } = new();

    [Parameter] public EventCallback OnMealSubmit { get; set; }

    private EditContext? _editContext;

    protected override void OnParametersSet()
    {
        // Recreate context if parent supplies a different Meal instance (e.g., after save/reset).
        if (_editContext?.Model != Meal)
        {
            _editContext = new EditContext(Meal);
        }
    }

    private void AddFoodToMeal(Food food)
    {
        Meal.Foods.Add(food);

        _editContext?.NotifyFieldChanged(new FieldIdentifier(Meal, nameof(Meal.Foods)));
    }

    private void RemoveFoodFromMeal(Food food)
    {
        Meal.Foods.Remove(food);

        _editContext?.NotifyFieldChanged(new FieldIdentifier(Meal, nameof(Meal.Foods)));
    }

    private async Task HandleSubmit()
    {
        await OnMealSubmit.InvokeAsync();
    }
}
