@model Category

@* Edit modal  *@
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="exampleModalLabel">Category Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4">
                <form id="categoryUpsertForm">
                    <input type="hidden" id="editCategoryId"/>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Category Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter category name...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Color" class="form-label">Category Color</label>
                        <input asp-for="Color" type="color" class="form-control form-control-color w-100" title="Choose your color" value="#6c757d">
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 px-4 pb-4">
                <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary px-4 shadow-sm" id="btnCategoryUpdate">Save Category</button>
            </div>
        </div>
    </div>
</div>